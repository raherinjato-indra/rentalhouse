{% extends 'base.html.twig' %}
{% extends 'baseadmin.html.twig' %}

{% block title %}Détails de la ville{% endblock %}

{% block souscarouselle %}
    <h1>Ville</h1>

    <table class="table">
        <tr>
            <th>Id</th>
            <td>{{ city.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ city.name }}</td>
        </tr>
    </table>

    <a href="{{ path('app_city_index') }}">Retour à la liste</a> |
    <a href="{{ path('app_city_edit', {'id': city.id}) }}">Modifier</a>

    {{ include('city/_delete_form.html.twig', { city: city }) }}
{% endblock %}
