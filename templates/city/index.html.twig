{% extends 'baseadmin.html.twig' %}

{% block title %}Liste des villes{% endblock %}


{% block souscarouselle %}
<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

* {
    box-sizing: border-box;
}

body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    margin: 0;
    padding: 20px 0;
    min-height: 100vh;
}

.cards-container {
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
}

.card {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    animation: fadeInUp 0.6s ease-out forwards;
}

.card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.15);
}

.card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    transition: transform 0.4s ease;
}

.card:hover img {
    transform: scale(1.1);
}

.card-content {
    padding: 20px 25px;
}

.card-content h2 {
    font-size: 1.4rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 15px;
    text-align: center;
    position: relative;
}

.card-content h2::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 3px;
    background: linear-gradient(90deg, #667eea, #764ba2);
    border-radius: 2px;
}

.info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px 20px;
    margin-top: 10px;
}

.info {
    font-size: 0.9rem;
    color: #495057;
    display: flex;
    align-items: center;
}

.info i {
    margin-right: 8px;
    color: #667eea;
    font-size: 1.2rem;
}

.card-actions {
    margin-top: 25px;
    display: flex;
    gap: 12px;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.card-actions a,
.card-actions form button {
    padding: 12px 20px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    border: none;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: white;
    position: relative;
    overflow: hidden;
    min-width: 80px;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-actions a::before,
.card-actions form button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.4s;
}

.card-actions a:hover::before,
.card-actions form button:hover::before {
    left: 100%;
}

.card-actions a {
    background: linear-gradient(135deg, #667eea, #764ba2);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
}

.card-actions a.edit {
    background: linear-gradient(135deg, #ffc107, #ff8c00);
    box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
    color: white;
}

.card-actions form button.btn-delete {
    background: linear-gradient(135deg, #dc3545, #c82333);
    box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
}

.card-actions a:hover,
.card-actions form button:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

.btn-add {
    display: block;
    margin: 30px auto;
    padding: 15px 30px;
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
    border-radius: 50px;
    text-align: center;
    font-weight: 600;
    font-size: 1.1rem;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 10px 30px rgba(40, 167, 69, 0.4);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    max-width: 300px;
    animation: bounceIn 0.8s ease-out 0.3s both;
}

.btn-add::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.6s;
}

.btn-add:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 15px 40px rgba(40, 167, 69, 0.5);
}

.btn-add:hover::before {
    left: 100%;
}

h1 {
    text-align: center;
    margin-bottom: 20px;
    color: white;
    font-size: 3rem;
    font-weight: 700;
    text-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    position: relative;
    animation: slideDown 0.6s ease-out;
}

h1::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, #ff6b6b, #4ecdc4);
    border-radius: 2px;
    animation: expandWidth 1s ease-out 0.5s both;
}

/* Animations */

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(50px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes bounceIn {
    0% {
        opacity: 0;
        transform: scale(0.3) translateY(50px);
    }
    50% {
        opacity: 1;
        transform: scale(1.05) translateY(-10px);
    }
    70% {
        transform: scale(0.9) translateY(0);
    }
    100% {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-50px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes expandWidth {
    from {
        width: 0;
    }
    to {
        width: 100px;
    }
}

    </style>
    <h1>Liste des villes</h1>
       <a href="{{ path('app_city_new') }}" class="btn-add">➕ Créer une nouvelle ville</a>

    <div class="cards-container">
        {% for city in cities %}
            <div class="card">
                <div class="card-content">
                    <h2>{{ city.name }}</h2>

                    <div class="info-grid">
                        <div class="info">
                            <i class="fas fa-id-badge"></i> ID : {{ city.id }}
                        </div>
                    </div>

                    <div class="card-actions">
                        <a href="{{ path('app_city_show', {'id': city.id}) }}">Voir</a>
                        <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="edit">Modifier</a>
                        <form method="post" action="{{ path('app_city_delete', {'id': city.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ville ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.id) }}">
                            <button class="btn-delete">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <p style="text-align: center; width: 100%;">Aucune ville trouvée.</p>
        {% endfor %}
    </div>

 
{% endblock %}
