{% extends 'baseadmin.html.twig' %}

{% block title %}Liste des villes{% endblock %}


{% block souscarouselle %}
<style>
        .cards-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .card {
            background-color: #fff;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease;
        }

        .card:hover {
            transform: translateY(-15px);
        }

        .card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .card-content {
            padding: 15px 20px;
        }

        .card-content h2 {
            font-size: 20px;
            margin-bottom: 10px;
            color: #004080;
        }

        .info-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 6px 20px;
            margin-top: 0px;
        }

        .info {
            font-size: 12.5px;
            color: #333;
        }

        .info i {
            margin-right: 2px;
            color: #007bff;
        }

        .card-actions {
            margin-top: 15px;
            display: flex;
            gap: 10px;
            justify-content: flex-start;
            flex-wrap: wrap;
        }

        .card-actions a,
        .card-actions form button {
            display: inline-block;
            padding: 8px 12px;
            border-radius: 6px;
            font-size: 13px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
            line-height: 1.2;
            border: none;
        }

        .card-actions a {
            color: white;
        }

        .card-actions a:not(.edit) {
            background-color: #28a745;
        }

        .card-actions a.edit {
            background-color: #ffc107;
            color: #000;
        }

        .card-actions form button.btn-delete {
            background-color: #dc3545;
            color: white;
        }

        .card-actions form button.btn-delete:hover {
            background-color: #c82333;
        }

        .btn-add {
            display: block;
            margin: 30px auto;
            text-align: center;
            padding: 10px 20px;
            background-color: #004080;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
        }

        .btn-add:hover {
            background-color: #003366;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #004080;
        }
    </style>
    <h1>Liste des villes</h1>
       <a href="{{ path('app_city_new') }}" class="btn-add">➕ Créer une nouvelle ville</a>

    <div class="cards-container">
        {% for city in cities %}
            <div class="card">
                <div class="card-content">
                    <h2>{{ city.name }}</h2>

                    <div class="info-grid">
                        <div class="info">
                            <i class="fas fa-id-badge"></i> ID : {{ city.id }}
                        </div>
                    </div>

                    <div class="card-actions">
                        <a href="{{ path('app_city_show', {'id': city.id}) }}">Voir</a>
                        <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="edit">Modifier</a>
                        <form method="post" action="{{ path('app_city_delete', {'id': city.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ville ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.id) }}">
                            <button class="btn-delete">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <p style="text-align: center; width: 100%;">Aucune ville trouvée.</p>
        {% endfor %}
    </div>

 
{% endblock %}
