        }

        .form-box .actions {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }

        .form-box button,
        .form-box a {
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: bold;
            text-decoration: none;
            border: none;
            cursor: pointer;
        }

        .form-box button {
            background-color: #28a745;
            color: white;
        }

        .form-box a {
            background-color: #6c757d;
            color: white;
        }

        .form-box button:hover,
        .form-box a:hover {
            opacity: 0.9;
        }
