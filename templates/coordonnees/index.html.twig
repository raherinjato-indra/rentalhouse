{% extends 'baseadmin.html.twig' %}

{% block title %}Liste des Coordonn√©es{% endblock %}

{% block souscarouselle %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

* {
    box-sizing: border-box;
}

body {
    font-family: 'Poppins', sans-serif;
   
    min-height: 100vh;
    margin: 0;
    padding: 20px;
}

.page-container {
    max-width: 1200px;
    margin: 40px auto;
    padding: 30px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
}

h1 {
    text-align: center;
    color: rgb(58, 19, 121);
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 2rem;
    text-shadow: 0 4px 15px rgba(0,0,0,0.3);
    position: relative;
    animation: slideDown 0.6s ease-out;
}

h1::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, #ff6b6b, #4ecdc4);
    border-radius: 2px;
    animation: expandWidth 1s ease-out 0.5s both;
}

@keyframes slideDown {
    from { opacity: 0; transform: translateY(-50px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes expandWidth {
    from { width: 0; }
    to { width: 100px; }
}

table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 3px 0;
    background-color: transparent;

}

.card-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* deux colonnes */
    gap: 20px;
    justify-content: center;
}
.card {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}


    .card h3 {
        margin-bottom: 8px;
        color: #004080;
    }
.actions {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 15px;
}

.actions a {
    padding: 12px 20px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    min-width: 80px;
    text-align: center;
    color: white;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.actions a::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.4s;
}

.actions a:hover::before {
    left: 100%;
}

.actions a.btn-show {
    background: linear-gradient(135deg, #667eea, #764ba2);
}

.actions a.btn-edit {
    background: linear-gradient(135deg, #ffc107, #ff8c00);
}

.actions a:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

.btn {
    padding: 6px 14px;
    font-size: 13px;
    border-radius: 6px;
    font-weight: 500;
    min-width: auto;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
}

/* Bouton voir (bleu) */
.btn-show {
    background-color: #3182ce;
    color: white;
}

.btn-show:hover {
    background-color: #2b6cb0;
}

/* Bouton modifier (orange) */
.btn-edit {
    background-color: #ed8936;
    color: white;
}

.btn-edit:hover {
    background-color: #dd6b20;
}

/* Bouton supprimer (rouge) √† styliser si n√©cessaire dans _delete_form.html.twig */
.btn-delete {
    background-color: #e53e3e;
    color: white;
}

.btn-delete:hover {
    background-color: #c53030;
}


.btn-new {
    display: block;
    margin: 0 auto 3rem;
    padding: 15px 35px;
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    text-transform: uppercase;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    text-align: center;
    max-width: 500px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    animation: bounceIn 0.8s ease-out 0.3s both;
}

@keyframes bounceIn {
    0% { opacity: 0; transform: scale(0.3) translateY(50px); }
    50% { opacity: 1; transform: scale(1.05) translateY(-10px); }
    70% { transform: scale(0.9) translateY(0); }
    100% { opacity: 1; transform: scale(1) translateY(0); }
}

.btn-new::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.6s;
}

.btn-new:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 15px 40px rgba(0,0,0,0.3);
}

.btn-new:hover::before {
    left: 100%;
}

.center {
    text-align: center;
}

#toast-container {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 9999;
}

.toast {
    background-color: #333;
    color: white;
    padding: 14px 22px;
    margin-top: 12px;
    border-radius: 12px;
    box-shadow: 0 8px 15px rgba(0,0,0,0.25);
    animation: slideIn 0.4s ease, fadeOut 0.5s ease 4s forwards;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 12px;
    cursor: pointer;
}

.toast-success {
    background: linear-gradient(135deg, #28a745, #218838);
}

.toast-error,
.toast-danger {
    background: linear-gradient(135deg, #dc3545, #bd2130);
}

.toast-info {
    background: linear-gradient(135deg, #17a2b8, #117a8b);
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeOut {
    to {
        opacity: 0;
        transform: translateY(20px);
    }
}

</style>
<div class="page-container">
    <h1>üìç Liste des Coordonn√©es</h1>

    <div class="center">
        <a href="{{ path('app_coordonnees_new') }}" class="btn-new">‚ûï Ajouter une nouvelle coordonn√©e</a>
    </div>

    <table>
      
        <tbody>
        <div class="card-container">
        {% for coordonnee in coordonnees %}
           <div class="card">
            <h3>{{ coordonnee.quartier.nom }}</h3>
            <p><strong>Adresse:</strong>{{ coordonnee.adresse }} </p>
            {#<p><strong>Latitude:</strong> {{ coordonnee.latitude }}</p>
            <p><strong>Longitude:</strong> {{ coordonnee.longitude }}</p>#}
            <p><strong>Code Postal:</strong> {{ coordonnee.CodePostal }}</p>
            <div class="actions">
                <a href="{{ path('app_coordonnees_show', {'id': coordonnee.id}) }}" class="btn btn-show">Voir</a>
                <a href="{{ path('app_coordonnees_edit', {'id': coordonnee.id}) }}" class="btn btn-edit">Modifier</a>
                {{ include('coordonnees/_delete_form.html.twig', {'coordonnee': coordonnee}) }}
            </div>
        </div>
        {% else %}
            <tr>
                <td colspan="7" class="center">Aucune coordonn√©e trouv√©e.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<div id="toast-container">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="toast toast-{{ label }}">
                {% if label == 'success' %}‚úÖ{% elseif label in ['error', 'danger'] %}‚ùå{% else %}‚ÑπÔ∏è{% endif %}
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>

<script>
    document.querySelectorAll('.toast').forEach(toast => {
        toast.addEventListener('click', () => {
            toast.remove();
        });

        setTimeout(() => {
            toast.remove();
        }, 4500);
    });
</script>
{% endblock %}
